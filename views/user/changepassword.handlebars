<div class="text-center">
    {{#if msg}}
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{msg}}
    </div>
    {{/if}} {{#if errMsg}}
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{errMsg}}
    </div>
    {{/if}}
    <h3><b>Change Password</b>
    </h3>
    <form class="col-md-offset-3 col-md-6 col-md-offset-3 col-xs-offset-2 col-xs-8 col-xs-offset-2" method="post" action="">
        <input type="password" class="sm-buffer form-control" name="oldPassword" placeholder="Current Password" required>
        <input type="password" class="sm-buffer form-control" name="newPassword" placeholder="New Password" required>
        <input type="password" class="sm-buffer form-control" name="confirmNewPassword" placeholder="Confirm New Password" required>
        <button type="Submit" class="pull-right sm-buffer btn btn-primary">Save</button>
    </form>
</div>
