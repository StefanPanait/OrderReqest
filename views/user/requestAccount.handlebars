<div class="row">
    {{message}}
    <div class="text-center">
        <h3><b>Request Access</b>
        </h3>
        <form class="col-md-offset-3 col-md-6 col-md-offset-3 col-xs-offset-2 col-xs-8 col-xs-offset-2" action="/requestAccount" method="post">
            <input type="email" class="form-control" name="email" placeholder="Email" required>
            <textarea class="form-control sm-buffer" placeholder="Notes" name="note"></textarea>
            <button type="submit" class="md-buffer pull-right btn btn-primary">Request</button>
        </form>
    </div>
</div>
