<div class="row">
    <div class="col-xs-12 text-center">
        <h3><b>Log In</b>
        </h3>
        <form class="col-md-offset-3 col-md-6 col-md-offset-3 col-xs-offset-2 col-xs-8 col-xs-offset-2" action="/login" method="post">
            <input type="text" class="form-control" name="username" placeholder="Username" required>
            <input type="password" class="form-control md-buffer" name="password" placeholder="Password">
            <div class="text-right">
                <a href="/requestAccount" class="md-buffer btn btn-info request-btn" id="requestAccountBtn">Request Access</a>
                <button type="submit" class="md-buffer btn btn-primary register-btn">Log In</button>
                <p><a href="/forgotPassword">Forgot your password?</a>
                </p>
            </div>
        </form>
    </div>
</div>